<%= form_for(@info) do |f| %>
  <% if @info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@info.errors.count, "error") %> prohibited this info from being saved:</h2>

      <ul>
      <% @info.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "名称" %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :tags %><br>
    <%= f.collection_check_boxes :tags, %w[a b c d], :to_s, :to_s %>
  </div>
  <div class="field">
    <%= f.label :published_at %><br>
    <%= f.text_field :published_at %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
